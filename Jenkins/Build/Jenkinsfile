pipeline {
    agent any
    options {

    }
    stages {
        stage('Checkout code') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            tools {
                jdk 17
                maven "LOCALMAVEN"
            }
            steps {
                echo 'Building..'
                sh 'mvn clean'
                sh 'mvn process-resources'
                sh 'mvn liquibase:dropAll liquibase:update'
                sh 'mvn test'
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}
